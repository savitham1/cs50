// Take length as the input from the user and
// Print a full pyramid based on mario game

#include <cs50.h>
#include <stdio.h>

int main(void)
{
    char length;
    int n = 0;
    
    // Input from the user
    // Repeat the prompt until a valid number between 1 and 8 is entered
    do
    {
        length = get_char("Height: "); 
        n = atoi(&length);       
    }
    while (n < 1 || n > 8);
    
    // Iterate for the length of the pyramid
    for (int i = 1; i <= n; i++)
    {    
        // Left pyramid
        for (int j = 1; j <= n - i; j++)
        {
            printf(" ");
        }
        
        for (int k = 1; k <= i; k++)
        {
            printf("#");
        }
        
        // Mid blank space
        printf("  ");
   
        // Right pyramid
        for (int l = 1; l <= i; l++)
        {
            printf("#");
        }        
        
        printf("\n");
        
    }    
}

